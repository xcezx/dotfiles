if [ `uname` = "Darwin" ]; then
    alias ls='ls -FG'
else
    alias ls='ls -F --color=auto'
fi
alias la='ls -al'
alias ll='ls -lg'

alias sc='screen -D -RR'
alias sl='screen -ls'

alias emacs='emacs -nw'

alias x='exit'

alias g='git'
alias b='bzr'

alias -g L='| less -r'
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g W='| wc'

